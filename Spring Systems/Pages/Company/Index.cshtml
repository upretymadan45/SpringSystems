@page "/"
@model Spring_Systems.Pages.Company.IndexModel
@{
}

<div class="row">
    <div class="col-12">
        <div class="row mb-3">
            <div class="col-6">
                <h3>Company Database (@Model.Companies.Count companies)</h3>
            </div>
            <div class="col-6">
                <a asp-page="/Company/NewCompany" class="btn btn-primary float-end">Add New</a>
            </div>
        </div>
       
        <table class="table table-striped table-sm table-hover table-bordered">
            <thead class="bg-secondary text-white">
                <tr>
                    <th>Company</th>
                    <th>Address</th>
                    <th>Total Employees</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var company in Model.Companies)
                {
                    <tr>
                        <td>@company.CompanyName</td>
                        <td>@company.CompanyAddress</td>
                        <td>@company.TotalEmployees employees</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>