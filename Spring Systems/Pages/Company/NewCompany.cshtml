@page
@model Spring_Systems.Pages.Company.NewCompanyModel
@{
}

<div class="row">
    <div class="col-12">
        <form method="post" asp-page-handler="Post">
            <div class="row mb-3">
                <div class="col-4">
                    <label asp-for="CompanyDTO.Name" class="form-label">Company Name</label>
                    <input type="text" asp-for="CompanyDTO.Name" class="form-control" />
                    <span asp-validation-for="CompanyDTO.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-4">
                    <label asp-for="CompanyDTO.Address" class="form-label">Company Address</label>
                    <input type="text" asp-for="CompanyDTO.Address" class="form-control" />
                    <span asp-validation-for="CompanyDTO.Address" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-4">
                    <input type="submit" class="btn btn-primary me-2" name="Save" />
                    <a asp-page="/Company/Index" class="btn btn-danger">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>